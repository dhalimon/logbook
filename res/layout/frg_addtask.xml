<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/saveTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:ems="10"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/RecordSndBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/saveTextBox"
        android:layout_alignRight="@+id/saveTextBox"
        android:layout_below="@+id/saveTextBox"
        android:layout_marginTop="59dp"
        android:text="@string/record_snd"
        android:textSize="25sp" />

    <Button
        android:id="@+id/TaskSaveBtn"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/RecordSndBtn"
        android:layout_alignRight="@+id/RecordSndBtn"
        android:layout_below="@+id/RecordSndBtn"
        android:layout_marginTop="32dp"
        android:text="@string/save_task_btn"
        android:textSize="25sp" />

</RelativeLayout>